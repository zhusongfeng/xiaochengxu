page{
  background-color: #f5f5f5;
}
.user-block{
  height: 426rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-repeat: no-repeat;
  position: relative;
}
.bg-replace{
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: -1;
}
.user-block .user-info{
  text-align: center; 
}
.user-info .avatar-wrap{
  width: 194rpx;
  height: 194rpx;
  background: #fff;
  border-radius: 50%;
  margin-bottom: 40rpx;
}
.avatar-wrap .userinfo-avatar{
  width: 182rpx;
  height: 182rpx;
  border-radius: 50%;
  margin-top: 6rpx; 
}
.user-info .userinfo-nickname{
  font-size: 30rpx;
  color: #fff;
}
.navigator-list{
  background-color: #fff;
}
.navigator-list .navigator-item{
  position: relative;
  display: flex;
  align-items: center;
  height: 110rpx;
  padding: 0 81rpx 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.navigator-list .navigator-item::after{
  content: '';
  position: absolute;
  top: 50%;
  right: 48rpx;
  width: 20rpx;
  height: 20rpx;
  transform: translateY(-50%) rotate(45deg);
  border-top: 4rpx solid rgba(0, 0, 0, .4);
  border-right: 4rpx solid rgba(0, 0, 0, .4);
}
.navigator-item .item-icon{
  margin-right: 20rpx;
}
.navigator-item:first-child .item-icon,
.navigator-item:nth-child(2) .item-icon{
  width: 32rpx;
  height: 38rpx;
}
.navigator-item:nth-child(3) .item-icon{
  width: 40rpx;
  height: 38rpx;
}
.navigator-item:last-child .item-icon{
  width: 40rpx;
  height: 30rpx;
}
.navigator-item .item-name{
  flex: 1;
}
.logout-btn{
  width: 690rpx;
  height: 90rpx;
  margin: 10rpx auto 30rpx;
  letter-spacing: 4rpx;
}
.caution-dialog .title{
  text-align: center;
}
.caution-dialog .flex{
  display: flex;
  align-content:flex-start;
  align-items: center;
  font-size: 26rpx;
}
.caution-dialog .flex>view{
  margin-bottom: 10rpx;
  flex: 0 0 auto;
}
.caution-dialog view input{
  border: 1rpx solid #e5e5e5;
}
.caution-dialog .formButton button{
  margin-top: 20rpx;
  padding: 10 20rpx;
  font-size: 26rpx;

}