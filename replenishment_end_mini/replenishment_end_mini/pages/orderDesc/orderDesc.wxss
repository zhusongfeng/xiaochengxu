.container{
  padding: 0 30rpx;
  font-weight: 500;
  font-size: 0;
}
.order-pay,
.order-result{
  text-align: center;
}
.hotel-name{
  margin-top: 70rpx;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.hotel-icon{
  width: 40rpx;
  height: 48rpx;
  margin-right: 21rpx;
}
.order-pay{
  margin-top: 49rpx;
  font-size: 60rpx;
}
.order-result{
  margin-top: 30rpx;
  font-size: 32rpx;
}
.desc-list,
.order-info{
  font-size: 32rpx;
}
.desc-list{
  margin-top: 80rpx;
  padding-bottom: 43rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.list-item{
  display: flex;
}
.list-item .value{
  flex: 1;
  text-align: right;
}
.list-item:not(:last-child){
  margin-bottom: 46rpx;
}
.order-info{
  margin-top: 33rpx;
}
.pay-icon{
  width: 32rpx;
  height: 32rpx;
}
.machineDetail{
  float: right;
  margin-top: 50rpx;
}