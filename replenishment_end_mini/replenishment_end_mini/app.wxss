/* singel-row-text 单行文本，溢出隐藏 */
.srt{
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space:nowrap;
}
page{
  font-family: "PingFang-SC-Medium";
  border-top: 1rpx solid #e5e5e5; 
  min-height: 100vh;
  box-sizing: border-box;
}
image{
  width: auto;
  height: auto;
}
.btn-primary{
   background: linear-gradient(to left, #71a8f6, #767cec);
   color: #fff;
}
.btn-primary:active{
  background: linear-gradient(to left, #6198e6, #766cbc);
}
.btn-primary::after{
  border: none;
}
.btn-default{
  background-color: #fff;
  color: #666;
}
.btn-default:active{
  background-color: #eee;
}
.bg-f5{
  background: #f5f5f5;
}
