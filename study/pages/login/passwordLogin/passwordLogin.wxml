<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" maxlength="11" name="account" data-name='account' value='{{account}}' placeholder="请输入您的手机号" bindinput ="phoneInput" bindblur='account_val'/>
        </view>
      </view>
    </view>
    <view class="page-section block">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" password type="text" placeholder="请输入您的密码" bindinput ="passwordInput"/>
        </view>
      </view>
    </view>
    <view class='big_bt' catchtap='loginIn'>登录</view>
    <navigator class='turntologin' open-type="redirect" url='../idencodeLogin/idencodeLogin'>手机验证码登录</navigator>
  </view>
</view>