.barrage{
  width:100%;
  height:50rpx;
  margin-top:20rpx;
  position: relative;
}
.barraging{
  width:100%;
  height:50rpx;
  position: fixed;
  left:0;
  top:0;
  z-index:100;
  margin-top:20rpx;
}
.barrage .search_item{
  margin-left:24rpx;
  height:50rpx;
  line-height:50rpx;
  background: rgba(0, 0, 0, 0.6);
  font-size:26rpx;
  text-align: center;
  color:#fff;
  width:60%;
  border-radius:30rpx;
  position:absolute;
  left:-500rpx;
}
