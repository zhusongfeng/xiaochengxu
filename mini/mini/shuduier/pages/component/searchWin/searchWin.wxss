@import "../../common/weui.wxss";

.container{
  padding: 10rpx 0rpx;
}
.search_row{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #ebeced;
  padding-left: 50rpx;
}
.search_row,.search{
  display: flex;
}
.search{
  width: 80%;
  height: 60rpx;
  background-color: #ebeced;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
}
.searchcion{
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.searchinput{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}
.sousuo{
  font-size: 32rpx;
  color: gray;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 30rpx;
}
.search_history{
  padding-top: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.search_list{
  display: flex;
  flex-flow:row wrap;
  justify-content: flex-start;
}
.hot_search{
  font-size: 32rpx;
}
.search_item{
  min-width: 100rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.clear_search{
  text-align: center;
  margin-top: 80rpx;
  color: gray;
  font-size: 32rpx;
}