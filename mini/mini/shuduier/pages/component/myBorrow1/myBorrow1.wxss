/* pages/component/myBorrow1/myBorrow1.wxss */
.container1{
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.swiper-tab{  
    width: 100%;  
    text-align: center;  
    line-height: 80rpx;
}  
.swiper-tab-list{
    font-size: 32rpx;  
    display: inline-block;  
    width: 50%;  
    color: #000000;  
}  
.on{ 
    color: #509AFF;  
    border-bottom: 5rpx solid #509AFF;
}  
  
.swiper-box{ 
    display: block; 
    width: 100%;
    height: 100%; 
    font-size: 30rpx;
    box-sizing: border-box;
}
.swiper-item{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #ebeced;
}
.history-item{
    padding-bottom: 10rpx;
}
.swiper-item-title{
    display: flex;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.swiper-item-content{
    display: flex;
    margin-top: 20rpx;
    padding-left: 20rpx;
}
.left-item{
    width: 20%;
}
.right-item{
    width: 78%;
    margin-left: 2%;
    margin-top: 10rpx;
}
.swiper-item-content image{
    width: 150rpx;
    height:170rpx;  
}
.book-author,.order-time{
    font-size: 26rpx;
    color: gray;
    margin-top: 10rpx;
}
.button{
    margin-right:40rpx;
    color: gray; 
    border: 2rpx solid #ebeced;
    height: 50rpx;
    border-radius: 25rpx;
    line-height: 50rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    float: right; 
}
.button-special{
    color: #509AFF; 
    border: 2rpx solid #509AFF;
    float: right; 
}