.book{
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-flow:row wrap;
  font-size: 32rpx;
  box-shadow: 10rpx 10rpx 5rpx ghostwhite;
  border-left: 2rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
  display: -webkit-box;
  -webkit-box-align: center;
  -webkit-box-pack: center;
  margin-top: 30rpx;

}
.icon_address{
  width: 20%;
}
.icon_address image{
  width: 140rpx;
  height: 160rpx;
}
.icon_back image{
  width: 30rpx;
  height: 30rpx;
}
.icon1{
  width: 140rpx;
  height: 160rpx;
}
.address_info{
  width: 70%;
  margin-left: 20rpx;
}
.icon_back{
  width: 10%;
}
.bookTitle,.bookAuthor{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.bookAuthor{
  color: gray;
}